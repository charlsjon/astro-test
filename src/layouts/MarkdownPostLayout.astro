---
import BaseLayout from './BaseLayout.astro';
import '../styles/global.css';
const { frontmatter } = Astro.props;
const tags = frontmatter.tags;
---
<BaseLayout pageTitle={frontmatter.title}>
  <article class="mx-auto w-full max-w-2xl format format-sm sm:format-base lg:format-lg format-blue dark:format-invert">
    <header class="mb-4 lg:mb-6 not-format">
      <address class="flex items-center mb-6 not-italic">
        <div class="inline-flex items-center mr-3 text-sm text-gray-900 dark:text-white">
          <img class="mr-4 w-16 h-16 rounded-full" src={frontmatter.avatar.url} alt={frontmatter.avatar.alt} />
          <div>
            <a href="#" rel="author" class="text-xl font-bold text-gray-900 dark:text-white">{frontmatter.author}</a>
            <p class="text-base text-gray-500 dark:text-gray-400">{frontmatter.occupation}</p>
            <p class="text-base text-gray-500 dark:text-gray-400"><time datetime="2022-02-08" title="February 8th, 2022">{frontmatter.pubDate.toString().slice(0,10)}</time></p>
          </div>
        </div>
      </address>
      <h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white">{frontmatter.title}</h1>
    </header>
    <p class="lead">{frontmatter.description}</p>
    <figure><img src={frontmatter.image.url} alt={frontmatter.image.alt}>
      <figcaption>Digital art by Anonymous</figcaption>
    </figure>

    <div class="p-6 pb-4 mt-6 mb-6 font-medium text-gray-500 bg-white border border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400">
      <h4 class="mb-4 font-bold text-gray-900 uppercase dark:text-white">Tags</h4>
      <div class="flex flex-wrap">
        {tags.map((tag: string) => (
          <a class="bg-primary-50 text-blue-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 hover:bg-blue-200 dark:hover:bg-blue-300 dark:text-blue-800 mb-2" href={`/tags/${tag}`}>#{tag}</a>
        ))}
      </div>
    </div>
    <slot /> 
  </article>
</BaseLayout>