---
import BaseLayout from './BaseLayout.astro';
import '../styles/global.css';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
  <p class="mb-4">{frontmatter.pubDate.toString().slice(0,10)}</p>
  <p class="mb-4"><em>{frontmatter.description}</em></p>
  <p class="mb-2">Written by: {frontmatter.author}</p>
  <img class="mb-2" src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />
  <slot />
</BaseLayout>