---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogArticle from '../../components/BlogArticle.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection("blog");

  const uniqueTags = [...new Set(allPosts.map((post: any) => post.data.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post: any) => post.data.tags.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---
<BaseLayout pageTitle={tag}>
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <h2 class="mb-4 text-left text-2xl lg:text-3xl tracking-tight font-normal text-gray-900 dark:text-white">Posts tagged with <span class="font-medium">{tag}</span>:</h2>
    <div class="grid gap-8 grid-cols-1">
      {posts.map((post: any) => (
        <BlogArticle 
          author={post.data.author}
          title={post.data.title}
          paragraph={post.data.description}
          link={`/posts/${post.id}/`}
          tags={post.data.tags || 'Blog'}
          avatar={post.data.avatar}
          date={post.data.pubDate}
        />
      ))}
    <div/>
  </div>
</BaseLayout>